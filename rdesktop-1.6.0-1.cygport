DESCRIPTION="Client for MS Terminal Services and Remote Desktop protocols"
HOMEPAGE="http://rdesktop.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"

src_compile() {
	cd ${S}
	cygautoreconf
	lndirs
	cd ${B}
	# --with-libvncserver: vnc/* sources aren't shipped with tarball
	cygconf --with-ipv6 --with-openssl=/usr --with-sound=oss
	cygmake
}
